{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "install": {
            "cache": false,
            "outputMode": "errors-only"
        },
        "build": {
            "cache": false,
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "./dist/**/*"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx",
                "package.json",
                "tsconfig.json"
            ]
        },
        "pretty": {
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ],
            "outputMode": "errors-only"
        },
        "lint": {
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ],
            "outputMode": "errors-only"
        },
        "clean-install": {
            "cache": false,
            "outputMode": "errors-only"
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}